
<h2>Change plans </h2>



<div class="row justify-content-center">
<div class="col-md-6">

<%= form_for @vvv, url: {action: "update"} do |f| %>


<select name="yyy", class: 'form-control'>
    <% Plan.all.each do |author| %>
        <option value="<%= author.id %>"><%= author.name  %>-<%= author.display_price  %>$</option>
    <% end %>
</select>



  <%= f.submit "Submit new plan",  class: "btn btn-primary" %>

<% end %>


</div>
</div>
